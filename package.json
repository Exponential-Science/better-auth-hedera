{
  "name": "@exponentialscience/better-auth-hedera",
  "version": "1.0.2",
  "description": "Hedera integration for better-auth",
  "keywords": [
    "hedera",
    "better-auth",
    "auth",
    "authentication",
    "plugin"
  ],
  "author": "Rully Ardiansyah <r.ardiansyah@exp.science>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:js && bun run build:types && bun run build:types:extra",
    "build:clean": "rm -rf dist",
    "build:js": "bun build src/index.ts --outfile dist/index.js --target node --format esm && bun build src/server/index.ts --outfile dist/server.js --target node --format esm && bun build src/client/index.ts --outfile dist/client.js --target node --format esm",
    "build:types": "tsc",
    "build:types:extra": "bun scripts/build-types.ts",
    "prepublishOnly": "bun run build"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "dependencies": {
    "better-auth": "^1.3.28",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5",
    "better-auth": "^1.3.28"
  }
}
